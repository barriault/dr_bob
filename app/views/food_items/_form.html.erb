<!-- Errors -->
<%= bootstrap_errors f %>

<!-- Name -->
<%= content_tag(:div, class: "form-group #{has_error(f.object, :name)}") do %>
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, placeholder: FoodItem.human_attribute_name(:name), class: "form-control" %>
  </div>
<% end %>

<!-- Brand -->
<%= content_tag(:div, class: "form-group #{has_error(f.object, :brand)}") do %>
  <%= f.label :brand, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :brand, placeholder: FoodItem.human_attribute_name(:brand), class: "form-control" %>
