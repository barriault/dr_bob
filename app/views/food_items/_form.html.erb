<!-- SI Dimension/Units -->
<%= content_tag(:div, class: "form-group #{has_error(f.object, :si_dimension) || has_error(f.object, :si_units)}") do %>
  <%= f.label :si_dimension, class: "col-sm-2 control-label" %>
  <div class="col-sm-2">
    <%= f.text_field :si_dimension, placeholder: FoodItem.human_attribute_name(:si_dimension), class: "form-control" %>
  </div>
  <div class="col-sm-8">
    <%= f.select :si_units, Units::SI_UNITS, { include_blank: false }, { class: "form-control" } %>
  </div>
<% end %>


<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-default" %>
  </div>
</div>