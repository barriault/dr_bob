<!-- Errors -->
<%= bootstrap_errors f %>

<!-- Name -->
<%= content_tag(:div, class: "form-group #{has_error(f.object, :singular_name) || has_error(f.object, :si_dimension) || has_error(f.object, :si_units)}") do %>
  <%= f.label :singular_name, class: "col-sm-2 control-label" %>
  <div class="col-sm-5">
    <div class="input-group">
      <span class="input-group-addon">One</span>
      <%= f.text_field :singular_name, placeholder: Measurement.human_attribute_name(:singular_name), class: "form-control" %>
      <span class="input-group-addon">Equals</span>
      <%= f.text_field :si_dimension, placeholder: Measurement.human_attribute_name(:si_dimension), class: "form-control" %>
    </div>
  </div>
  <div class="col-sm-5">
    <%= f.select :si_units, Units::SI_UNITS, { include_blank: false }, { class: "form-control" } %>
  </div>
<% end %>

<!-- Prep -->
<%= content_tag(:div, class: "form-group #{has_error(f.object, :prep)}") do %>
  <%= f.label :prep, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :prep, placeholder: Measurement.human_attribute_name(:prep), class: "form-control" %>
  </div>
<% end %>

<% unless f.object.new_record? -%>
  <!-- Calories -->
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :calories)}") do %>
    <%= f.label :calories, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :calories, placeholder: Measurement.human_attribute_name(:calories), class: "form-control" %>
    </div>
  <% end %>

  <!-- Fat -->
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :fat)}") do %>
    <%= f.label :fat, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <%= f.text_field :fat, placeholder: Measurement.human_attribute_name(:fat), class: "form-control" %>
        <span class="input-group-addon" >Grams</span>
      </div>
    </div>
  <% end %>

  <!-- Carbs -->
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :carbs)}") do %>
    <%= f.label :carbs, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <%= f.text_field :carbs, placeholder: Measurement.human_attribute_name(:carbs), class: "form-control" %>
        <span class="input-group-addon" >Grams</span>
      </div>
    </div>
  <% end %>

  <!-- Fiber -->
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :fiber)}") do %>
    <%= f.label :fiber, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <%= f.text_field :fiber, placeholder: Measurement.human_attribute_name(:fiber), class: "form-control" %>
        <span class="input-group-addon" >Grams</span>
      </div>
    </div>
  <% end %>

  <!-- Protein -->
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :protein)}") do %>
    <%= f.label :protein, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <%= f.text_field :protein, placeholder: Measurement.human_attribute_name(:protein), class: "form-control" %>
        <span class="input-group-addon" >Grams</span>
      </div>
    </div>
  <% end %>
<% end %>


<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-default" %>
  </div>
</div>